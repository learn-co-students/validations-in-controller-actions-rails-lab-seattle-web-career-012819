<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>
  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>
  <%= submit_tag "Create Author" %>
<% end %>

<%= form_for() do |f| %>
  <label>Student first name:</label><br>
  <%= f.text_field :first_name %><br>

  <label>Student last name:</label><br>
  <%= f.text_field :last_name %><br>

  <%= f.submit %>
<% end %>
